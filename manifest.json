{
    "name": "NP2 - Product Details",
    "version": "0.1",
    "manifest_version": 2,
    "description": "View details of a product",
    "icons": {
        "128": "icons/product128x128.png"
    },
    "browser_action": {
        "default_popup": "index.html"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["js/content/index.js"]
        }
    ]
}